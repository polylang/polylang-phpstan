{
	"name": "wpsyntex/polylang-phpstan",
	"description": "Polylang extension for PHPStan",
	"license": "GPL-3.0-or-later",
	"homepage": "https://polylang.pro",
	"type": "library",
	"require": {
		"szepeviktor/phpstan-wordpress": "^1.0",
		"wpsyntex/polylang-stubs": "^3.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^7 || ^9"
	},
	"autoload": {
		"psr-4": {
			"WPSyntex\\Polylang\\PHPStan\\": "src/"
		}
	},
	"suggest": {
		"wpsyntex/polylang-stubs": "Stubs for Polylang and Polylang Pro"
	},
	"scripts": {
		"test":"vendor/bin/phpunit"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	}
}
